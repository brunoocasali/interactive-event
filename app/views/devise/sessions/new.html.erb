<div class="card medium col s6 offset-s3 z-depth-2">
  <div class="card-content">
    <div class="nav-wrapper">
      <h3>Login in</h3>
    </div>
  </div>
  <div class="row">
    <%= simple_form_for(resource, as: resource_name, html: { class: 'col s12' }, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="input-field col s10 offset-s1">
          <i class="mdi-communication-email prefix"></i>
          <input class="string email required validate" autofocus="autofocus" name="user[email]" id="user_email" type="email"/>
          <label for="user_email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s10 offset-s1">
          <i class="mdi-action-lock prefix"></i>
          <input class="string password required validate" name="user[password]" id="user_password" type="password"/>
          <label for="user_password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="col s10 offset-s1">
          <%= f.button :submit, 'Log in' %>
        </div>
      </div>

    <% end %>
  </div>
</div>

<%= render 'devise/shared/links' %>

