<div class="row">
  <div class="col s12">
    <div class="container">
      <h2><%= t('devise.titles.forgot_your_pwd') %></h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="row">
          <div class="input-field col s12">
            <%= f.input :email, autofocus: true, class: 'validate' %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= render 'devise/shared/links' %>
          </div>
        </div>

        <div class="fixed-action-btn fab-position">
          <%= button_tag(type: :submit, class: 'btn-floating btn-large green') do %>
            <%= content_tag(:i, nil, class: 'mdi-navigation-check') %>
          <% end %>
          <ul>
            <li>
              <%= link_to raw('<i class="large mdi-navigation-arrow-back"></i>'),
                          new_user_session_url, class: 'btn-floating blue', title: 'Perdeu sua senha?' %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
