<div class="row">
  <div class="col s12">
    <div class="container">
      <h2><%= t('devise.titles.change_your_pwd') %></h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="row">
          <div class="input-field col s12">
            <%= f.input :password, label: t('devise.fields.password'), input_html: { class: 'validate' }, required: true, autofocus: true %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.input :password_confirmation, label: t('devise.fields.password_confirmation'), required: true, input_html: { class: 'validate' } %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= render 'devise/shared/links' %>
          </div>
        </div>

        <%= fab_to_save back_url: new_user_session_url %>
      <% end %>
    </div>
  </div>
</div>
