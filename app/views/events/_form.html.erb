<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :hashtag %>
    <%= f.input :title %>
    <%= f.input :image %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.input :kind %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
