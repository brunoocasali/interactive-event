<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <%= f.association :user, as: :hidden, input_html: { value: current_user_id } %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.input :hash_tag, class: 'validate' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.input :title, class: 'validate' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.input :start_at, date_form_helper %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.input :end_at, date_form_helper %>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <%= f.input :kind, collection: EventKind.to_a %>
      </div>
      <!--<div class="row">-->
      <!--<div class="input-field col s12">-->
      <!--<div class="file-field input-field">-->
      <!--<input class="file-path validate" type="text"/>-->
      <!--<div class="btn">-->
      <!--<span>File</span>-->
      <!--<%# f.input :image, as: :file, label: false %>-->
      <!--</div>-->
      <!--</div>-->
      <!--</div>-->
      <!--</div>-->
      <div class="input-field col s12">
        <p><label for="services"><%= ta Event, :services %></label></p>
        <%= f.input :services, as: :check_boxes, collection: ServiceKind.to_a,
                    label: false, checked: @event.services, item_wrapper_class: 'col s3' %>
      </div>
    </div>
  </div>

  <%= fab_to_save back_url: events_path %>
<% end %>
