<div class="row">
  <div class="col s12 m8">
    <h4 class="red-text"><%= @event.tag %></h4>
  </div>
</div>
<div class="row">
  <div class="col s12 m4">
    <h5>Candidatos</h5>
  </div>
</div>

<ul class="collapsible" data-collapsible="accordion">
  <% @items.each do |item| %>
    <li>
      <div class="collapsible-header">
        <div class="row">
          <div class="col s7 m10 l10">
            <i class="mdi-<%= item.image_link ? 'image-photo-camera' : 'editor-format-align-justify' %>"></i>
            <%= item.author.screen_name %>
          </div>
          <%= link_to 'approve!', approve_item_monitoring_path(@event.hash_tag, item), class: 'btn blue', method: :post %>
        </div>
      </div>
      <div class="collapsible-body">
        <div class="row">
          <% if item.image_link %>
            <div class="col s12 m6 l6">
              <p class="flow-text"><%= item.text %></p>
            </div>
            <div class="col s12 m6 l6">
              <p>
                <%= image_tag(item.image_link, size: '240x240', class: 'responsive') %>
              </p>
            </div>
          <% else %>
            <div class="col s12 m12 l12">
              <p class="flow-text"><%= item.text %></p>
            </div>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<div class="row">
  <div class="col offset-s3">
    <%= paginate @items %>
  </div>
</div>

<div class="fixed-action-btn fab-position">
  <%= link_to approved_monitoring_url, title: 'aprovados!', class: 'btn-floating btn-large green' do %>
    <i class="large mdi-navigation-check"></i>
  <% end %>
  <ul>
    <li>
      <%= link_to raw('<i class="large mdi-navigation-arrow-back"></i>'), monitoring_index_path,
                  class: 'btn-floating blue', title: 'inicial de monitoramentos' %>
    </li>
    <li>
      <%= link_to raw('<i class="large mdi-action-view-carousel"></i>'),
                  display_url(@event.hash_tag),
                  class: 'btn-floating yellow', title: 'Ver no telÃ£o!' %>
    </li>
  </ul>
</div>
