<div class="row">
  <div class="col s4">
    <h2 class="red-text"><%= @event.tag %></h2>
  </div>
  <div class="col s4">
    <h4>Candidates</h4>
  </div>
  <div class="col s4">
    <p>
      <a class="waves-effect waves-light btn-large"><i class="mdi-hardware-keyboard-arrow-left left"></i>approved</a>
    </p>
  </div>
</div>

<table>
  <thead>
  <tr>
    <th>Text</th>
    <th>Image link</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.service %></td>
      <td><%= item.event %></td>
      <td><%= item.status %></td>
      <td><%= item.text %></td>
      <td><%= item.image_link %></td>
      <td><%= link_to 'Show', item %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
