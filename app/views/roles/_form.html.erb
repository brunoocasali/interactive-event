<%= simple_form_for(@role) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="row">
      <div class="input-field col s12">
        <%= f.input :name, class: 'validate' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.input :description %>
      </div>
    </div>
  </div>

  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <%= button_tag(type: :submit, class: 'btn-floating btn-large red') do %>
      <%= content_tag(:i, nil, class: 'mdi-navigation-check') %>
    <% end %>
    <ul>
      <li>
        <%= link_to raw('<i class="large mdi-navigation-arrow-back"></i>'),
                    roles_url, class: 'btn-floating green' %>
      </li>
    </ul>
  </div>
<% end %>
