<div class="valign-wrapper" style="margin-top: 2%">
  <div class="row">
    <div class="col s12 valign">
      <div class="row">
        <div class="card grey lighten-4">
          <div class="card-image">
            <%= image_tag(@item.image_url(:big), class: 'valign img-responsive') %>
            <span class="card-title" style="font-weight: 500"><%= @item.event.tag.upcase! %></span>
          </div>
          <div class="card-content" style="padding: 1em 0 0 0">
            <div class="row valign-wrapper">
              <div class="col s10">
                <span class="valign <%= color_by(@item.service) %>" style="font-size: 20px"><%= @item.author.screen_name %></span>
              </div>
              <div class="col s2">
                <i class="<%= service_as_icon(@item.service) %> small valign"></i>
              </div>
            </div>
            <div class="row">
              <div class="col s12">
                <span class="black-text" style="font-size: 20px">
                  <%= highlight(truncate(@item.text, length: 200),
                                @item.event.tag, highlighter: '<span class="red-text">\1</span>') %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
