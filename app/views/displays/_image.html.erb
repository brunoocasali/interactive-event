<div class="valign-wrapper">
  <div class="row">
    <div class="col s12 valign">
      <div class="row">
        <div class="card">
          <div class="card-content">
            <p style="font-size: 20px">
              <span class="flow-text">
                Você também quer aparecer aqui? poste algo com a hashtag:
                <span class="red-text"><%= @item.event.tag %></span>
              </span>
            </p>
          </div>
          <div class="card-image">
            <%= image_tag(@item.image_url(:big), class: 'valign') %>
            <span class="card-title" style="font-weight: 500"><%= @item.event.tag.upcase! %></span>
          </div>
          <div class="card-content">
            <p class="black-text" style="font-size: 20px">
              <%= highlight(truncate(@item.text, length: 200),
                            @item.event.tag, highlighter: '<span class="red-text">\1</span>') %>
            </p>
          </div>
          <div class="card-action">
            <div class="row blue-text valign-wrapper">
              <div class="col s10">
                <span class="valign" style="font-size: 20px"><%= @item.author.screen_name %></span>
              </div>
              <div class="col s2">
                <i class="<%= service_as_icon(@item.service) %> small valign"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
